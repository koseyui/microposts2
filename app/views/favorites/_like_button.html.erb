
  <% if current_user.favorite?(micropost) %>
    <%= form_for(current_user.favorites.find_by(micropost_id: micropost.id), remote: true, html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'Unlike', class: 'btn btn-warning btn-xs'%>
    <% end %>
  <% else %>
    <%= form_for(current_user.favorites.build, remote: true) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit " Like ", class: 'btn btn-default btn-xs' %>
    <% end %>
  <% end %>